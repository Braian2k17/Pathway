<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeclaro"
    android:backgroundTint="@color/verdeclaro"
    tools:context=".ThirdFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="MANUAL DE USUARIO"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Vacio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   " />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:text="# Modo Manual"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:text="Este modo de conduccion ubicado en el primer apartado, consta de cuatro botones a modo de Joystick, los cuales deben ser presionados sostenidamente para poder controlar la cortadora."
                android:textAlignment="viewStart" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:text="Estos deben ser presionados individualemente y para detener el moviemiento de la maquina no se debe presionar ninguno de estos." />

            <TextView
                android:id="@+id/vacio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   " />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:src="@drawable/joystick" />

            <TextView
                android:id="@+id/vacio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   " />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:text="# Modo Automatico"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:text="En este segundo apartado, correspondiente al modo de Conduccion Automatico, se debe dibujar el area que se desea cortar mediante marcadores en el mapa." />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:text="A modo de ejemplo." />

            <TextView
                android:id="@+id/vacio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   " />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:src="@drawable/secuencia" />

            <TextView
                android:id="@+id/vacio4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   " />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:text="La secuencia de marcadores debe seguir la misma que se desea que la cortadora siga (con un MAXIMO de 15 marcadores). Estos puntos de trayectoria se marcar en el mapa, presionando sostenidamente el lugar en donde lo deseamos colocar." />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:text="Una vez que se tenga el area delimitada a cortar, se debe presionar el boton de &quot;Inicar&quot;, en la parte inferior derecha de la pantalla." />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="60sp"
                android:lineSpacingExtra="0sp"
                android:text="Lo que dara inicio a la puesta en marcha de la cortadora." />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>